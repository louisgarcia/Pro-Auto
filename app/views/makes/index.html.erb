<h1>Listing makes</h1>

<table id="blueTbl">
  <thead>
	  <tr>
	    <th>ID</th>
		<th>Name</th>
	    <th></th>
	  </tr>
  </thead>
  <tfoot>
	<tr></tr>  
  </tfoot>
  <tbody>

<% @makes.each do |make| %>
  <tr>
	<td><%= make.id %></td>
    <td><%= make.name %></td>
    <td><%= link_to '', make, :class => 'showBtn' %>
		<%= link_to '', edit_make_path(make), :class => 'editBtn' %>
	    <%= link_to '', make, :class => 'delBtn', :confirm => 'Are you sure?', :method => :delete %></td>  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Make', new_make_path %>

<%= javascript_include_tag "dynamic_models" %>
<h1>New Work Order</h1>
<%= form_for(@work_order) do |f| %>
  <% if @work_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work_order.errors.count, "error") %> prohibited this work_order from being saved:</h2>
      <ul>
      <% @work_order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div id="row1">
	<div class="col1">
		<div class="form">
			<%= f.label :shop %><br />
			<%= f.label :client %><br />
			<%= f.label :stock_number %><br />
			<%= f.label :make %><br />
			<%= f.label :model %><br />
			<%= f.label :year %><br />
	    	<%= f.label :vin %><br />
	    	<%= f.label :priority %><br />
	    	<%= f.label :dirty %><br />
			<%= f.label :notes %><br />
		</div>
	</div>
	<div class="col2">
		<div class="form">
			<%= f.select(:shop_id, Shop.all.collect {|s| [ s.name, s.id ] }) %><br />
			<%= f.select(:client_id, @clients_for_select, {:include_blank => true}) %><br />
			<%= f.text_field :stock_number %><br />			
			<%= f.select :make_id, @makes_for_select, {:include_blank => true} %><br />
			<%= f.collection_select :model_id, Model.find(:all), :id, :name, {:include_blank => true} %><br />
			<%= f.select :year, options_for_select([ "","2011", "2010","2009","2008","2007","2006","2005","2004","2003","2002"],"") %><br />
			<%= f.text_field :vin %><br />
			<%= f.check_box(:priority) %><br />
			<%= f.check_box(:dirty) %><br />
			<%= f.text_area :notes, :size => "40x5" %><br />
			<%= f.hidden_field :status, :value => 'New' %>
		</div>
	</div>	
  </div>
  <div class="actions">
    <%= f.submit :status => "New"%>
  </div>
<% end %>
<%= link_to 'Back', work_orders_path %>
